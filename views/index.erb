<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Rwiki</title>

    <!-- ** CSS ** -->
    <link rel="stylesheet" type="text/css" href="/resources/ext/css/ext-all.css" />
    <link rel="stylesheet" type="text/css" href="/resources/markitup/skins/markitup/style.css" />
    <link rel="stylesheet" type="text/css" href="/resources/markitup/sets/textile/style.css" />

    <%= css_assets :core %>

    <!-- ** Javascript ** -->
    <%= js_assets :jquery %>
    <%= js_assets :extjs %>

    <!-- ** MarkItUp editor ** -->
    <script type="text/javascript" src="/javascripts/vendor/markitup/jquery.markitup.js"></script>
    <script type="text/javascript" src="/resources/markitup/sets/textile/set.js"></script>

    <%= js_assets :rwiki %>

    <script type="text/javascript">
      Ext.onReady(function() {
        Rwiki.init();
      });
    </script>
  </head>

  <body>
    <!-- Fields required for history management -->
    <form id="history-form" class="x-hidden">
      <input type="hidden" id="x-history-field" />
      <iframe id="x-history-frame"></iframe>
    </form>

    <div id="editor-container" class="x-hide-display">
      <textarea id="editor" name="content"></textarea>
    </div>
  </body>

  <!--<link href='http://fonts.googleapis.com/css?family=Inconsolata' rel='stylesheet' type='text/css' />-->
</html>
